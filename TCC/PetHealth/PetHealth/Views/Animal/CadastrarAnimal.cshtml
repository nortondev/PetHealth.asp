@model PetHealth.Models.modelAnimal

@{
    ViewBag.Title = "Cadastrar Animal";
}

<h2>CadastrarAnimal</h2>
<div class="container">
    @using (Html.BeginForm("CadastrarAnimal", "Animal", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>modelAnimal</h4>
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.Animal, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Animal, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Animal, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.descAnimal, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.descAnimal, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.descAnimal, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group center">
                <label class="control-label col-md-2" for="file">Foto Animal</label>
            </div>
            <div class="col-md-10">
                <input type="file" name="file" id="file" /> <br />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    }
</div>
    <div>
        @Html.ActionLink("Back to List", "Listar Animal", "Animal")
    </div>


<style>
    .container {
        position: relative;
        width: 800px;
        left: 265px;
        background-color: #111853;
        border-radius: 40px;
        height: 530px;
    }

    .form-horizontal {
        font-size: 20px;
        color: white;
        width: 50%;
        margin-left: 250px;
    }
</style>