@model IEnumerable<PetHealth.Models.modelPet>

@{
    ViewBag.Title = "Pet";
}


<div class="">
        <div class="row center">
            <div class="col-lg-9">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="card h-100" style="width: 400px; height: 500px;" >
                                @if (item.fotoPet != null)
                                {
                                    <img class="card-img-right flex-auto d-none d-md-block" data-ng-src=" " alt="Thumbnail [300x300]"
                                         style="width: 400px; height: 300px;" src="@item.fotoPet" data-holder-rendered="true" />
                                }
                                else
                                {
                                    <img class="card-img-right flex-auto d-none d-md-block" data-ng-src=" " alt="Thumbnail [300x300]"
                                         style="width: 400px; height: 500px;" src="~/Imagens/image-not-found.jpg" data-holder-rendered="true" />
                                }

                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a href="ListarPet/Pet"> <span style="text-decoration: none; color: black; font-weight: bold;">@item.nomePet</span></a>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
<footer>
    <h1></h1>
</footer>
<style>
    footer{
        padding-top:400px;
    }
</style>
