@model IEnumerable<PetHealth.Models.modelCliente>

@{
    ViewBag.Title = "ListarCliente";
}

<h2><span class="legal">Lista de</span> clientes</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nomeCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sobrenomeCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.emailCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefoneCliente)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idCliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nomeCliente @*, new { @class = "nome-exibicao"}*@)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sobrenomeCliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.emailCliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefoneCliente)
        </td>
        <td>
            @Html.ActionLink("Excluir", "ExcluirCLiente", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>
<footer>
    <h1></h1>
</footer>

<style>
    footer{
        padding-top:500px;
    }

    .legal {
        font-family: 'Merienda', cursive;
        color: #111853;
        font-weight: 700;
        text-align: center;
    }

    h2{
        color:royalblue;
        font-weight:bold;
        text-align:center;
        padding-top:30px;
        padding-bottom:30px;
    }

